open console
open qualified libFormat#elalib@fm

format' # private 
format' fun fstr xs n | n == 0 = fun (fm.format fstr showf xs)
                      | else = \x -> format' fun fstr (x::xs) (n-1)

printf fstr = format' write (force fstr) [] (fm.countArgs (force fstr))

printfn fstr = format' writen (force fstr) [] (fm.countArgs (force fstr))

formatStr fstr = format' id (force fstr) [] (fm.countArgs (force fstr))