open console
import libFormat#elalib@fm

format' # private 
format' fun fstr xs n | n == 0 = fun (fm.format fstr showf xs)
                      | else = \x -> format' fun fstr (x::xs) (n-1)

printf (fstr is string) = format' write fstr [] (fm.countArgs fstr)

printfn (fstr is string) = format' writen fstr [] (fm.countArgs fstr)

formatStr (fstr is string) = format' id fstr [] (fm.countArgs fstr)