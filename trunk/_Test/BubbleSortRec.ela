open List;

var size = 1000;
var lst = [| for (i to size - 1) size - i |];

let matSort(j, len) 
	when (j < len)
	{
		when (lst[j + 1] < lst[j])
		{
			var x = lst[j];
			lst[j] = lst[j + 1];
			lst[j + 1] = x;
		}
		
		matSort(j + 1, len);
	}

let sort(i)
	when (i < size)
	{		
		matSort(0, size - i - 1);
		sort(i + 1);
	}
	
sort(0);