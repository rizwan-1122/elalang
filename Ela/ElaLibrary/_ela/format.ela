open console
open qualified libFormat#elalib@fm

format' # private 
format' fun fmt xs n | n == 0 = fun (fm.format fmt show showf xs)
                     | else = \x -> format' fun fmt (x::xs) (n-1)

printf fmt = format' write (force fmt) [] (fm.countArgs (force fmt))

printfn fmt = format' writen (force fmt) [] (fm.countArgs (force fmt))

format fmt = format' id (force fmt) [] (fm.countArgs (force fmt))